set input-meta on
set output-meta on
set convert-meta off

set bell-style none

set completion-ignore-case on
set completion-map-case on
set show-all-if-ambiguous on
set show-all-if-unmodified on

set skip-completed-text on

set visible-stats on
set colored-stats on
set colored-completion-prefix on
set blink-matching-paren on

set enable-bracketed-paste on

# c-del, c-backspace
"\e[3;5~": kill-word
"\C-h": backward-kill-word

# http://www.ukuug.org/events/linux2003/papers/bash_tips/
# https://news.ycombinator.com/item?id=11211344
# incremental searching with up and down. e.g., type "ls" and press up to search all ls invocations
"\e[A": history-search-backward
"\e[B": history-search-forward

# todo: this is bash specific. use bash-specific mechanism
"\e[1;3A": "pushd ..\n" # alt-up
"\e[1;3C": "pushd -0\n" # alt-right
"\e[1;3B": "popd\n" # alt-down
"\e[1;3D": "pushd +1\n" # alt-left
