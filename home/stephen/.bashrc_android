# ------------------------------------------------------------------------------
# adb
# spaces in aliases are for expanding a subsequent dev alias

# use fb-adb instead of adb
adb() { fb-adb "$@"; }
alias adb='adb '

alias adb-snap='adb-snap '

alias pidcat='pidcat -i EGL_emulation -i OpenGLRenderer -i eglCodecCommon -W 32767 '

