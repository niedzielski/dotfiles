#!/usr/bin/env bash

case $- in *i*) :;; *) set -eu; set -o pipefail 2>/dev/null | :;; esac

youtube-dl-audio() {
  youtube-dl --audio-format best --audio-quality 0 -wqxo "$(youtube-dl -qe "$1").mp3" "$1"
}

# ------------------------------------------------------------------------------
case $- in *i*) :;; *) youtube-dl-audio "$@";; esac
