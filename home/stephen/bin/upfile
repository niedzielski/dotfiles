#!/usr/bin/env bash
# upfile, stephen@niedzielski.com
# find file in pwd or upwards
# $1 - file

# ------------------------------------------------------------------------------
upfile() (
  while :; do
    declare file="$PWD/$1"
    [[ -e "$file" ]] && echo "$file" && return 0
    [[ "$PWD" != / ]] && cd .. || return 1
  done
)

# ------------------------------------------------------------------------------
if ! return 2>/dev/null; then
  upfile "$@"
fi