#!/usr/bin/env bash
set -euo pipefail

status=$1
escape_nonprinting_chars=$2
columns=$3
dir="$(cd "$PWD" && dirs +0 || echo "$PWD")"

esc_tput() {
  local format=%s
  if [[ ${1-0} -ne 0 ]]; then
    format="\001$format\002"
  fi
  shift
  printf "$format" "$(tput "$@")"
}

repeat() {
  [[ $2 -lt 1 ]] && return
  printf "$1%.0s" $(eval echo {1..$2})
}

pad() {
  [[ $1 -gt 0 ]] && repeat ─ $((($1 - 1) - ${#dir} % $1))
}

# "
# ~ ──────────────────────────────────────────────────────────────────────────────
# $ "
echo -e "\n$(esc_tput "$2" setaf $(($1 ? 1 : 2)))$(esc_tput "$2" bold)$dir $(pad $columns)\n$ $(esc_tput "$2" sgr0)"
exit "$1"
