#!/usr/bin/env bash
# tarpipe, stephen@niedzielski.com
# multithreaded backups. depends on pv, pigz, timestamp.
# $1 output
# ... inputs
# ex:
#   cd / && tarpipe /media/stephen/garden/neptune home

# ------------------------------------------------------------------------------
set -euo pipefail

# ------------------------------------------------------------------------------
dep_chk() {
  declare -i err=0
  dpkg-query -l pv pigz > /dev/null || err=1
  type timestamp > /dev/null || err=1
  return $err
}

tarpipe() {
  dep_chk

  declare o="$1-$(timestamp).tar.gz"
  shift

  echo "output: $o"
  echo "inputs: $*"

  declare -i sz=0
  sz=$(du -bcs "$@"|tail -n1|cut -f1) || :
  echo "size: $sz"

  time {
    tar c "$@"|
    pv -s $sz|
    pigz -1 > "$o" || :
    sync
  }

  echo 'back up complete. verifying...'
  verify "$o"
}

verify() {
  time {
    printf '%s file(s) compressed to %s.' "$(tar tf "$1"|wc -l)" "$(du -h "$1"|cut -f1)"
  }
}

# ------------------------------------------------------------------------------
if ! return 2>/dev/null; then
  tarpipe "$@"
fi
